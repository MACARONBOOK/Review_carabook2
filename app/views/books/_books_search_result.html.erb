<!-- booksの検索結果 -->
<main>
 <table class = table>
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        <% books.each do |book| %>
         <tr>
            <td><%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image, size:'50x50' %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <td><%= book.category %></td>
         </tr>
        <% end %>
    </tbody>
</table>
</main>